{
  "manifest_version": 3,
  "name": "IPv4.Global Marketplace Ticker",
  "version": "1.22",
  "description": "Stock-like ticker displaying real-time IPv4 address block listings, transactions, and prices from the IPv4.Global marketplace",
  "icons": {
    "16": "assets/icon-16x16.png",
    "32": "assets/icon-32x32.png",
    "48": "assets/icon-48x48.png",
    "128": "assets/icon-128x128.png"
  },
  "host_permissions": [
    "https://y1dq7hifob.execute-api.eu-west-1.amazonaws.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_matches": [
        "*://*/*.ico",
        "*://*/*.png",
        "*://*/*.jpg",
        "*://*/*.jpeg",
        "*://*/*.gif",
        "*://*/*.css",
        "*://*/*.js",
        "*://*/*.json",
        "*://*/*.svg",
        "*://*/*.xml",
        "*://*/*.pdf"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["assets/logo.png", "assets/icon-*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage"
  ]
}
